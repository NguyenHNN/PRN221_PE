@page
@model Euro2024DB_NGUYENVANTRUNG.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}
<form method="post" style="width: 300px">
    <div class="">
        <label asp-for="@Model.Email" class="form-label me-2"></label>
        <input asp-for="@Model.Email" type="email" class="form-control" />
         <span asp-validation-for="@Model.Email" class="text-danger"></span> 
    </div>
    <div class="mt-2">
        <label asp-for="@Model.Password" class="form-label me-2"></label>
        <input asp-for="@Model.Password" type="password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Login</button>
</form>